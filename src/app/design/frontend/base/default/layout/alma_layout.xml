<layout>
    <default>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>alma/css/alma.css</name>
            </action>
        </reference>
    </default>
    <catalog_product_view translate="label">
        <reference name="head">
            <block type="core/text" name="alma_css">
                <action method="setText">
                    <text><![CDATA[<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/@alma/widgets@2.x/dist/widgets.min.css">]]>
                    </text>
                </action>
            </block>
        </reference>
        <reference name="product.info.extrahint">
            <block type="alma/ProductWidget" name="product.view.alma_badge" template="alma/product/badge.phtml" translate="label" />
        </reference>
    </catalog_product_view>
    <checkout_cart_index>
        <reference name="head">
            <block type="core/text" name="alma_css">
                <action method="setText">
                    <text><![CDATA[<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/@alma/widgets@2.x/dist/widgets.min.css">]]>
                    </text>
                </action>
            </block>
        </reference>
        <reference name="content">
            <reference name="checkout.cart">
                <block type="core/text_list" name="checkout.cart.extra">
                    <block type="alma/CartWidget" name="checkout.cart.alma_eligibility" template="alma/cart/eligibility.phtml"/>
                </block>
            </reference>
        </reference>
    </checkout_cart_index>
    <checkout_onepage_paymentmethod>
        <remove name="right"/>
        <remove name="left"/>
        <block type="checkout/onepage_payment_methods" name="root" output="toHtml" template="alma/checkout/methods.phtml">
            <action method="setMethodFormTemplate"><method>purchaseorder</method><template>payment/form/purchaseorder.phtml</template></action>
        </block>
    </checkout_onepage_paymentmethod>
</layout>
